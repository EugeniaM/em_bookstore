%h3.general-subtitle.mt-0= t('settings_page.billing_address')
%p.general-info-text all fields are required

.form-group{ class: ("has-error" if !@order_address.errors[:billing_first_name].empty?) }
  = f.label :billing_first_name, t('settings_page.first_name'), class: 'control-label input-label'
  = f.text_field :billing_first_name, class: 'form-control', placeholder: t('settings_page.first_name'), value: initial_billing_value(:first_name)
  -if !@order_address.errors[:billing_first_name].empty?
    %span.help-block= "#{t('settings_page.first_name')} #{@order_address.errors[:billing_irst_name][0]}" 


%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('header.app_name'), root_path, class: 'navbar-brand bold'
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home_menu'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}= t('header.shop_menu')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: "#"}= t('header.mobile_development')
              %li
                %a.collapse-link{href: "#"}= t('header.photo')
              %li
                %a.collapse-link{href: "#"}= t('header.web_design')
              %li
                %a.collapse-link{href: "#"}= t('header.web_development')
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "true"}= t('header.account_menu')
              %ul.dropdown-menu
                %li
                  = link_to t('header.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('header.log_in'), new_user_session_path
            %li
              = link_to t('header.sign_up'), new_user_registration_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home_menu'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "true"}= t('header.shop_menu')
            %ul.dropdown-menu
              %li
                %a{href: "#"}= t('header.mobile_development')
              %li
                %a{href: "#"}= t('header.photo')
              %li
                %a{href: "#"}= t('header.web_design')
              %li
                %a{href: "#"}= t('header.web_development')
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "true"}= t('header.account_menu')
              %ul.dropdown-menu
                %li
                  = link_to t('header.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('header.log_in'), new_user_session_path
            %li
              = link_to t('header.sign_up'), new_user_registration_path

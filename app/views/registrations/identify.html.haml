/ - title t('auth.sign_up')
%main
  .container
    .row
      .col-md-6
        .text-center
          %h3.guest-identify-title Returning Customer
          %a.general-login-icon.black{href: user_facebook_omniauth_authorize_path}
            %i.fa.fa-facebook-official
          %p.general-login-text or
        %p Log In with Password
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'auth-form'}) do |f|
          .form-group
            = f.label t('auth.email_label')
            = f.email_field :email, autofocus: true, class: 'form-control auth', placeholder: t('auth.email_label')
          .form-group
            = f.label t('auth.psw_label')
            = f.password_field :password, autocomplete: 'off', class: 'form-control auth', placeholder: t('auth.psw_label')
          = link_to t('auth.forgot_psw'), new_password_path(resource_name), class: "orange forgot_link"
          = f.button "Log In with Password", class: 'btn btn-primary btn-lg custom-btn identify'
      .col-md-6
        .text-center
          %h3.guest-identify-title New Customer
          %a.general-login-icon.black{href: user_facebook_omniauth_authorize_path}
            %i.fa.fa-facebook-official
          %p.general-login-text or
        %p Quick registration
        %p.secondary-text You'll be able to create password later
        = form_for(resource, as: resource_name, url: quick_registration_path(resource_name), html: {class: 'auth-form'}) do |f|
          .form-group
            = f.label t('auth.email_label')
            = f.email_field :email, autofocus: true, class: 'form-control auth', placeholder: t('auth.email_label')
          = f.button "Continue to Checkout", class: 'btn btn-primary btn-lg custom-btn identify'


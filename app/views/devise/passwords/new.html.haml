%main.container.general-main-wrap
  .text-center
    %h2= t('auth.forgot_your_psw')
  .text-center
    .instructions= t('auth.email_instruct_notification')

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'auth-form col-md-4 col-md-offset-4'}) do |f|
    .form-group
      = f.email_field :email, autofocus: true, class: 'form-control auth', placeholder: t('auth.email_placeholder')
    .text-center
      = f.button t('auth.email_instructions'), class: 'btn btn-primary btn-lg custom-btn'
    .text-center
      .cancel= link_to t('auth.cancel'), new_user_session_path, class: "orange"
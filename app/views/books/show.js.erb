<% if !@reviews_list %>
  $('#new-review-tab').addClass('selected-tab');
  $('#reviews-list-tab').removeClass('selected-tab');
  $('#new-review').addClass('selected-tab');
  $('#reviews-list').removeClass('selected-tab');
  $("#review-handler").html("<%= escape_javascript(render :partial => 'books/review_form', :locals =>{:book => @book}) %>");
<% else %>
  $('#reviews-list-tab').addClass('selected-tab');
  $('#new-review-tab').removeClass('selected-tab');
  $('#reviews-list').addClass('selected-tab');
  $('#new-review').removeClass('selected-tab');
  $("#review-handler").html("<%= escape_javascript(render :partial => 'books/reviews', :locals =>{:book => @book}) %>");
<% end %>


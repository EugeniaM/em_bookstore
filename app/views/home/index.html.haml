/ - provide(:title, "Home")
/ %h2= t('welcome_msg')

#slider.carousel.slide{'data-ride': "carousel"}
  %ol.carousel-indicators
    - @last_added_books.each_with_index do |book, index|
      %li{class: (index == 0 ? 'active' : ''), 'data-target': "#slider", 'data-slide-to': index.to_s}
  .carousel-inner{role: "listbox"}
    - @last_added_books.each_with_index do |book, index|
      .item{class: (index == 0 ? 'active' : ''), href: "#slider", 'data-slide': "next"}
        .row
          .col-sm-5.img-container
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{'src': book.covers[0].url(:medium), alt: book.title}
          .col-sm-7
            .mb-60
              %h2.slide-titile #{book.title}
              %p.lead.description #{limit_description(book.short_description)}
              %p.lead.small #{authors(book.authors)}
              .general-align
                %button.btn.btn-primary= t('home.buy_now')
.container
  .jumbotron.text-center.mb-0
    %h2.h1= t('home.welcome_msg')
    .mb-res-50.message
      %p= t('home.info_msg')
    %button.btn.btn-default= t('home.get_started')
.mb-35.best-sellers-container
  %h3 Best Sellers
  .row.best-seller-item
    - @best_sellers.each do |book|
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            %img.img-shadow.general-thumbnail-img{'src': book.covers[0].url(:thumb), alt: book.title}
            .thumb-hover
              .general-thumb-link-wrap
                %a.thumb-hover-link{href: "#"}
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                %a.thumb-hover-link{href: "#"}
                  %i.fa.fa-shopping-cart.thumb-icon
        .mb-35.best-seller-details
          .clearfix
            %p.pull-right.font-16.in-gold-500 â‚¬#{book.price}
            %p.title.mr-55 #{book.title}
          %span.divider-sm
          %p.lead.small #{authors(book.authors)}
